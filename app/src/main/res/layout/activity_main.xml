<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
            android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NUM1"

        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NUM2"

        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:shadowColor="@color/FireBrick"
        android:text="Result"
        android:textColor="@color/Black"
        android:textSize="24sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">




                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:onClick="mod"

                        android:text="N1%N2" />


                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:onClick="add"
                        android:text="+" />


                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="subtract"
                        android:layout_marginTop="10dp"
                        android:text="-" />


                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="multiply"
                        android:layout_marginTop="10dp"
                        android:text="*" />


                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="divide"
                        android:layout_marginTop="10dp"
                        android:text="/" />


                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="prime"
                        android:layout_marginTop="10dp"
                        android:text="PRIME(N1+N2)" />


                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="factorial"
                        android:layout_marginTop="10dp"
                        android:text="FACTORIAL(N1+N2)" />


                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="discount"
                        android:layout_marginTop="10dp"
                        android:text="PRICE AFT N2% DISCOUNT" />


                    <Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="HCF"
                        android:layout_marginTop="10dp"
                        android:text="HCF(int)" />


                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="LCM"
                        android:layout_marginTop="10dp"
                        android:text="LCM(int)" />


                    <Button
                        android:id="@+id/button10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTintMode="src_atop"
                        android:background="@color/Sky_a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:onClick="POW"
                        android:layout_marginTop="10dp"
                        android:text="N1^N2" />



                </LinearLayout>

        </ScrollView>

</LinearLayout>